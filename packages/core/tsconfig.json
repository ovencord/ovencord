{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "../../tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "Bundler",
        "baseUrl": ".",
        "paths": {
            "@discordjs/*": ["../*/src"],
            "@ovencord/*": ["../*/src"]
        }
    },
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.cjs", "src/**/*.mjs", "bin"],
	"exclude": ["node_modules"]
}
