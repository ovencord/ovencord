{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output Formatting
    "pretty": false,

    // Completeness
    "skipDefaultLibCheck": true,

    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
        "@ovencord/*": ["../*/src"]
    },
    "types": [
      "@ovencord/builders",
      "@ovencord/util",
      "@ovencord/collection",
      "@ovencord/rest",
      "@ovencord/ws",
      "discord-api-types/v10",
      "bun-types",
      "@sapphire/snowflake"
    ]
  }
}
