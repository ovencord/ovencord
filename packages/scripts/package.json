{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@ovencord/scripts",
	"version": "0.1.0",
	"description": "A set of scripts that we use for our workflows",
	"private": true,
	"scripts": {
		"build": "tsc --noEmit --lib ESNext,DOM && tsup",
		"lint": "prettier --check . && cross-env TIMING=1 eslint --format=pretty src turbo/generators/config.ts",
		"format": "prettier --write . && cross-env TIMING=1 eslint --fix --format=pretty src turbo/generators/config.ts",
		"typecheck": "tsc --noEmit --lib ESNext,DOM",
		"fmt": "pnpm run format"
	},
	"bin": {
		"generate-split-documentation": "./bin/generateSplitDocumentation.js",
		"sort-labels": "./bin/sortLabels.js"
	},
	"exports": {
		".": {
			"require": {
				"types": "./dist/src/index.d.ts",
				"default": "./dist/src/index.js"
			},
			"import": {
				"types": "./dist/src/index.d.mts",
				"default": "./dist/src/index.mjs"
			}
		}
	},
	"main": "./dist/src/index.js",
	"module": "./dist/src/index.mjs",
	"types": "./dist/src/index.d.ts",
	"files": [
		"bin/generateSplitDocumentation.js",
		"dist"
	],
	"contributors": [
		"Ovencord Contributors"
	],
	"license": "Apache-2.0",
	"keywords": [
		"api",
		"bot",
		"client",
		"node",
		"discordjs"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ovencord/ovencord.git",
		"directory": "packages/scripts"
	},
	"bugs": {
		"url": "https://github.com/ovencord/ovencord/issues"
	},
	"homepage": "https://ovencord.dev",
	"funding": "https://github.com/ovencord/ovencord?sponsor",
	"dependencies": {
		"@actions/glob": "^0.5.0",
		"@ovencord/api-extractor-model": "workspace:^",
		"@ovencord/api-extractor-utils": "workspace:^",
		"@microsoft/tsdoc": "~0.15.1",
		"@microsoft/tsdoc-config": "~0.17.1",
		"@vercel/blob": "^2.0.0",
		"@vercel/postgres": "^0.10.0",
		"commander": "^14.0.2",
		"tslib": "^2.8.1",
		"undici": "7.16.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@turbo/gen": "^2.6.3",
		"@types/node": "^24.10.2",
		"cross-env": "^10.1.0",
		"eslint": "^9.39.1",
		"eslint-formatter-compact": "^9.0.1",
		"eslint-formatter-pretty": "^7.0.0",
		"prettier": "^3.7.4",
		"terser": "^5.44.1",
		"tsup": "^8.5.1",
		"turbo": "^2.6.3",
		"typescript": "~5.9.3"
	},
	"engines": {
		"node": ">=22.12.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
