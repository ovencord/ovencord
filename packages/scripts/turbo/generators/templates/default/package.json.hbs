{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@ovencord/{{name}}",
	"version": "0.1.0",
	"description": "{{description}}",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"test": "bun test",
		"lint": "eslint src",
		"format": "eslint src --fix",
		"changelog": "git cliff --prepend ./CHANGELOG.md -u -c ./cliff.toml -r ../../ --include-path 'packages/{{name}}/*'",
		"release": "cliff-jumper"
	},
	"type": "module",
	"exports": "./src/index.ts",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"directories": {
		"lib": "src",
		"test": "__tests__"
	},
	"files": [
		"src"
	],
	"contributors": [
		"Ovencord Contributors"
	],
	"license": "Apache-2.0",
	"keywords": [
		"discord",
		"api",
		"bot",
		"bun",
		"ovencord"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ovencord/ovencord.git",
		"directory": "packages/{{name}}"
	},
	"bugs": {
		"url": "https://github.com/ovencord/ovencord/issues"
	},
	"homepage": "https://ovencord.dev",
	"funding": "https://github.com/ovencord/ovencord?sponsor",
	"dependencies": {},
	"devDependencies": {
		"@ovencord/api-extractor": "workspace:^",
		"@ovencord/scripts": "workspace:^",
		"@favware/cliff-jumper": "^6.0.0",
		"@types/bun": "latest",
		"eslint": "^9.39.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
